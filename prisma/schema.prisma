generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  birthday     DateTime
  email        String         @unique
  password     String
  avatar       String
  money        Int            @default(10)
  pokedex      Pokedex[]
  userPokeball UserPokeball[]
}

model Pokemon {
  id              Int       @id @default(autoincrement())
  name            String
  base_experience Int
  hp              Int
  attack          Int
  defense         Int
  speed           Int
  image           String
  imageBack       String
  imageShiny      String
  imageBackShiny  String
  crie            String
  isShiny         Boolean
  pokedex         Pokedex[]
}

model Pokeball {
  id                 Int            @id @default(autoincrement())
  name               String
  capture_percentual Int
  image              String
  price              Int
  userPokeball       UserPokeball[]

}

model UserPokeball {
  id         Int      @id @default(autoincrement())
  userId     Int
  pokeballId Int
  amount     Int      @default(0)
  pokeball   Pokeball @relation(fields: [pokeballId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@index([pokeballId], map: "UserPokeball_pokeballId_fkey")
  @@index([userId], map: "UserPokeball_userId_fkey")
}

model Pokedex {
  id        Int     @id @default(autoincrement())
  userId    Int
  pokemonId Int
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  @@index([pokemonId], map: "Pokedex_pokemonId_fkey")
  @@index([userId], map: "Pokedex_userId_fkey")
}
